<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>UV Meals: UV Data</title>
        
        <!-- Stylesheets -->
        <% include layoutStyles %>
        <link rel="stylesheet" type="text/css" href="/css/data.css">
    </head>
    <body>
        <% include layoutNavbar %>

        <div class="container">
            <ul class="nav nav-pills well well-small">
                <% for(var i = 0; i < 15 && i < locations.length; i++) { %>
                    <li class="menu-item"><a href="#"><%= locations[i] %></a></li>
                <% } %>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Others
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                    <% for(var i = 15; i < locations.length; i++) { %>
                        <li class="menu-item"><a href="#"><%= locations[i] %></a></li>
                    <% } %>
                    </ul>
                </li>
            </ul>

            <header>
                <h2>UV Data for <span class="location">Location</span></h2>
            </header>

            <div id="date-picker" class="input-append date">
                <input class="input-small" type="text">
                <span class="add-on">
                    <i class="icon-th"></i>
                </span>
            </div>

            <div id="chart-day" class="chart"></div>
            <div id="chart-week" class="chart"></div>
        </div>

        <% include layoutFooter %>

        <!-- Scripts: placed at the end of the document so that the pages loads faster. -->
        <% include layoutScripts %>
        <script type="text/javascript" src="/js/data.js"></script>
    </body>
</html>
