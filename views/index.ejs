<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Heater: <%= title %></title>
        
        <!-- Stylesheets -->
        <% include layoutStyles %>
        <link rel="stylesheet" type="text/css" href="css/index.css">
    </head>
    <body>
        <% include layoutNavbar %>
            <ul class="nav">
                <li class="divider-vertical"></li>
                <li id="nav-location-menu" class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="text">Location</span>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="dropdown dropdown-submenu">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <span class="text">More Options</span>
                            </a>
                            <ul class="dropdown-menu">
                            <% for(var i = 15; i < locations.length; i++) { %>
                                <li class="menu-item"><a href="#"><%= locations[i] %></a></li>
                            <% } %>
                            </ul>
                        </li>
                        <li class="divider"></li>
                        <% for(var i = 0; i < 15 && i < locations.length; i++) { %>
                            <li class="menu-item"><a href="#"><%= locations[i] %></a></li>
                        <% } %>
                    </ul>
                </li>
            </ul>
            <form class="navbar-form">
                <div id="nav-datepicker" class="input-append date">
                    <input class="input-small" type="text">
                    <span class="add-on">
                        <i class="icon-th"></i>
                    </span>
                </div>
            </form>
        <% include layoutNavbarTail %>

        <div id="container" class="container">
            <h1><%= title %></h1>
        </div>

        <!-- Scripts: placed at the end of the document so that the pages loads faster. -->
        <% include layoutScripts %>
        <script type="text/javascript" src="js/index.js"></script>
    </body>
</html>
