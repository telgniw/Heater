<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Heater: <%= title %></title>
        
        <!-- Stylesheets -->
        <% include layoutStyles %>
        <link rel="stylesheet" type="text/css" href="css/index.css">
    </head>
    <body>
        <% include layoutNavbar %>

        <div class="rows-fluid container">
            <ul class="nav nav-pills well well-small">
                <% for(var i = 0; i < 15 && i < locations.length; i++) { %>
                    <li class="menu-item"><a href="#"><%= locations[i] %></a></li>
                <% } %>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="text">其他</span>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                    <% for(var i = 15; i < locations.length; i++) { %>
                        <li class="menu-item"><a href="#"><%= locations[i] %></a></li>
                    <% } %>
                    </ul>
                </li>
            </ul>
            <header>
                <h2>紫外線趨勢圖：<span class="location"></span></h2>
                <div id="date-picker" class="input-append date">
                    <input class="input-small" type="text">
                    <span class="add-on">
                        <i class="icon-th"></i>
                    </span>
                </div>
            </header>
            <div id="chart"></div>
        </div>

        <!-- Scripts: placed at the end of the document so that the pages loads faster. -->
        <% include layoutScripts %>
        <script type="text/javascript" src="js/index.js"></script>
    </body>
</html>
