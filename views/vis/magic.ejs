<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Heater</title>

        <!-- Stylesheets -->
        <% include ../layoutStyles %>
        <link rel="stylesheet" type="text/css" href="/heater/css/magic.css">
        <link rel="stylesheet" type="text/css" href="/heater/css/vis/magic.css">
    </head>
    <body>
        <% include ../layoutNavbar %>

        <div class="container">
            <div class="row-fluid">
                <div id="date-picker" class="input-append date span5">
                    <input class="input-small" type="text">
                    <span class="add-on">
                        <i class="icon-th"></i>
                    </span>
                </div>
                <% for(var i = 0; i < 2; i++) { %>
                <div class="btn-group span1 c<%= i %>">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                        地點
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="dropdown-submenu">
                            <a tabindex="-1" href="#">其他</a>
                            <ul class="dropdown-menu">
                                <% for(var j = 15; j < locations.length; j++) { %>
                                <li class="menu-item"><a href="#"><%= locations[j] %></a></li>
                                <% } %>
                            </ul>
                        <li class="divider"></li>
                        <% for(var j = 0; j < 15 && j < locations.length; j++) { %>
                        <li class="menu-item"><a href="#"><%= locations[j] %></a></li>
                        <% } %>
                    </ul>
                </div>
                <% } %>
            </div>
            
            <div class="row-fluid">
            <% for(var i = 0; i < 2; i++) { %>
                <div class="magic span6 c<%= i %>"></div>
            <% } %>
            </div>
        </div>

        <!-- Scripts: placed at the end of the document so that the pages loads faster. -->
        <% include ../layoutScripts %>
        <script type="text/javascript" src="/heater/js/magic.js"></script>
        <script type="text/javascript" src="/heater/js/vis/magic.js"></script>
    </body>
</html>

